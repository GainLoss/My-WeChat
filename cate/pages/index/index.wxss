/**index.wxss**/
/*顶部轮播*/
image{width:100%}
/*四个分类*/
.sort .flex-item {
  width:25%;
  height:60px;
  line-height:60px;
  text-align:center;
  float:left;
  background:#e9f0fa
}
.sort .active{
  background:#dfe5ef
}
/*内容列表*/
.list{
  height:100px;
  margin:20px 0px;
  padding:0px 10px;
 background:#e6e6e6;
}
.list .section__ctn{
  height:100%
}
.list .flex-item {
  width:100%;
  height:100px;
  line-height:100px;
  text-align:center;
  float:left;
  border:1px solid #f4f7e7;
}
.list .active{
  background:#ebeedc
}

/*位置*/
.map{
  width:50px;
  height:50px;
  line-height:50px;
  position:fixed;
  bottom:200px;
  right:5px;
  background:#e97676;
  text-align:center;
  font-size:14px;
}